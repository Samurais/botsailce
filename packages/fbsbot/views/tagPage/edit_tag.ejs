<!DOCTYPE html>
<html lang="en">

<head>
    <% include ../../../../app/views/partials/head %>
    <link rel="stylesheet"  href="/packages/fbsbot/fbchatpopup.css">
    
    <title>Chatbot Message</title>
    <style>
        .btn-custom {
            padding-left: 25px;
            padding-right: 25px;
            border-radius: 5px;
        }
        table .showModalMsg{
            cursor: pointer;
        }

        #lastMsgWithTag tr td:nth-child(3),
        #lastMsgWithTag tr th:nth-child(3){
            max-width: 300px !important;
        }
        
        #lastMsgWithTag{
            width: 95%;
            margin: auto;
        }
        #txtTagName{
            font-weight: bold;
        }
        
    </style>
</head>

<body class="hold-transition skin-blue sidebar-mini">

    <div class="wrapper">
        <% include ../../../../app/views/partials/header %>
        <% include ../../../../app/views/partials/menus %>
            <div class="content-wrapper" style="padding-left: 25%">
				<section class="content-header"> </section>
				<div class="col-md-8">
				<font color=red><b>Đang hoàn thiện</b></font>
					<div class="card">
						<div class="card-body">
							<div class="row" style="margin: 30px 0">
								<div class="col-sm-3"></div>
								<div class="col-sm-6">
									<input type="text" class="form-control" id="txtTagName" placeholder="Enter tag name...">
									<br>
									<button class="btn btn-info btn-custom" id="btnSaveTagName">Save</button>
									<input type="text" class="hidden" value="<%= tagName %>" id="hiddenTagName">
								</div>
								<div class="col-sm-3"></div>
							</div>
							
							<div class="row">
								<div class="col-md-1"></div>
								<div class="col-md-10">
									
									<table class="table table-striped table-hover table-condensed" id="lastMsgWithTag">
										<!-- content here -->
									</table>
								</div>
								<div class="col-md-1"></div>
							</div>
						 
						</div>
					 </div>
					  <!-- /.box -->
				</div>
			
            </div>
    </div>

    <% include ../../../../app/views/partials/footer %>
    <script src="/packages/fbsbot/edit_tag.js"></script>

</body>

</html>