<!DOCTYPE html>
<html lang="en">

<head>
    <% include ../../../app/views/partials/head %>
    <link rel="stylesheet" href="/packages/fbsbot/fbchatpopup.css">

    

    <title>Chatbot Message</title>
    <style>
        .btn-send {
            background-color: green;
        }

        .btn-send,
        .btn-back,
        .btn-custom {
            padding-left: 25px;
            padding-right: 25px;
            border-radius: 5px;
        }
    </style>
</head>

<body class="hold-transition sidebar-mini">

    <div class="wrapper">
        <% include ../../../app/views/partials/header %>
        <% include ../../../app/views/partials/menus %>
		<div class="content-wrapper">
			<section class="content">
			  <div class="row" style="padding-left: 25%">
				<div class="col-md-8">
				  <div class="card">

					<div class="card-body">
						<div class="col-md-1"></div>
                            
							
							<div class="col-md-1"></div>
                            <div class="col-md-10">
                                <button class="btn btn-success btn-back">Broadcase List</button>
                                <button class="btn btn-success pull-right" id="btnSend">Send Broadcase</button>
                                <br>
                                <br>
                                <table class="table table-striped table-hover table-condensed last-msg-table">
                                    <!-- content here -->
                                </table>
                            </div>
                            <div class="col-md-1"></div>
					  
					 
					</div>
				  </div>
				  <!-- /.box -->
				</div>
				<!-- /.col-->
			  </div>
			  <!-- ./row -->
			</section>
				
				
				
				
				
                    

                    <!-- msg modal  -->
			<div class="modal fade" id="modelUserMsg" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
				<div class="modal-dialog">
					<div class="modal-content">
						<div class="card">

							<div class="card-header">
								<span class="glyphicon glyphicon-comment"></span> Chat
								<div class="btn-group pull-right text-right">
									<button type="button" class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown" onClick="closeModalMsg()">
										<span class="glyphicon glyphicon-remove"></span>
									</button>

								</div>
							</div>

							<div class="card-body">

								<ul class="chat">

								</ul>

							</div>

						</div>
					</div>
				</div>

			</div>
			<!-- broadcase modal -->
			
			<!-- model -->
			<div class="modal fade" id="broadcaseDetail" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
				<div class="modal-dialog" role="document">
					<div class="modal-content">
						<div class="modal-header">
							<h5 class="modal-title">Message Information</h5>
							<button type="button" class="close" data-dismiss="modal" aria-label="Close">
								<span aria-hidden="true">&times;</span>
							</button>
						</div>
						<div class="modal-body">

							<form>
								<div class="form-group">
									<label>Title:</label>
									<input type="text" class="form-control" id="broadcaseTitle">
								</div>
								<div class="form-group">
									<label for="">Description</label>
									<textarea class="form-control" rows="3" id="broadcaseDesc"></textarea>
								</div>
								<div class="form-group">
									<label>Content:</label>
									<textarea class="form-control" rows="5" id="broadcaseContent"></textarea>
								</div>
							</form>

							<label for="">Danh sach</label>
							<div id="listUsers"></div>
						</div>

						<div class="modal-footer">
							<button type="button" class="btn btn-info btn-custom" id="btnSendMsg">Send</button>
						</div>
					</div>
				</div>
			</div>
		</div>
    </div>

    <% include ../../../app/views/partials/footer %>

    <!-- chatbotMsg custom js -->
    <script src="/packages/fbsbot/chatbotMsg.js"></script>
</body>

</html>